# UUID generator for Unix {{
function getuuid {
    uuid=$(uuidgen | tr 'A-Z' 'a-z' | tr -d '\n')
    echo "âŒ˜-V to paste $uuid"
    echo -n "$uuid" | pbcopy
}
export getuuid
# }}
